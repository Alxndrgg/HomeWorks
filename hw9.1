<html>    
    <head>
        <script> 
            //Исходные данные
            let N = 5; 
            let arr = new Array(N);
            let count = 0;
              
            //Решение
            for (let i = 0; i < N; i++) {
                arr[i] = new Array(N);
                for (let j = i + 1; j < N; j++) {
                    arr[i][j] = Math.floor(Math.random() * 2); 
                    if (arr[i][j] == 1) {
                        count++;
                    }
                }
            }

            //Вывод
            for (let i = 0; i < N; i++) {
                for (let j = 0; j < N; j++) {
                    if (i == j) {
                        arr[i][j] = 1;
                    } else { 
                        arr[j][i] = arr[i][j];
                    }
                    document.write(arr[i][j] + " ");
                }
                document.write("<br>");
            }
            
            document.write("<br> Всего дорог: " + count);
        </script>    
    </head>
